<%= form_with url: sessions_path, local: true do |form| %>
  <% if flash[:alert] %>
    <%= content_tag :p, flash[:alert], class: 'flash alert' %>
  <% end %>

  <p>
    <%= label_tag 'email' %><br>
    <%= form.text_field :email, id: :email %>
  </p>
  <p>
    <%= label_tag 'password' %><br>
    <%= form.password_field :password, id: :password %>
  </p>

  <p><%= submit_tag 'Enter' %></p>
<% end %>
