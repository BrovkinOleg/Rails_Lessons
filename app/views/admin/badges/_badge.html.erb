
<tr><th><%= badge.title %></th></tr>
<tr>
  <td class="col-md-2"><%= image_tag badge.image, size: "40x40" %></td>
  <td class="align-middle col-md-2">
    <div class="btn-group btn-group-sm">
      <%= link_to t('.edit'), edit_admin_badge_path(badge),
                  class: 'btn btn-outline-secondary'  %>
      <%= link_to t('.delete'),
                  admin_badge_path(badge), method: :delete,
                  data: {confirm: t('.sure')},
                  class: 'btn btn-outline-danger btn-sm' %>
    </div>
  </td>
</tr>
