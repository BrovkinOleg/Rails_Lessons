<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resources: @badge %>

    <p>
      <%= form.label :title %>
      <%= form.select :title, options_for_select(Badge::RULES_NAME, selected: @badge.title) %>
    </p>
    <p>
      <%= form.label :rule %>
      <%= form.text_field :rule, default: @badge.rule %>
      <%#= form. :rule, selected: @badges.rule %>
    </p>
    <p>
      <%= form.label :image %>
      <%= form.select :image, options_for_select(Badge.images, selected: @badge.image) %>
    </p>


    <p><%= form.submit %></p>
  </div>
<% end %>
