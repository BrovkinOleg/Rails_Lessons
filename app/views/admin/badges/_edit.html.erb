<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resources: @badge %>

    <p>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :image %>
      <%= form.select :image, options_for_select(Badge.images, selected: @badge.image) %>
    </p>

    <p>
      <%= form.label :rule %>
      <% rule = Badge::RULES[@badge.rule-1] %>
      <%= form.select :rule, options_for_select(Badge::RULES, selected: rule) %>
    </p>
    <p><%= form.submit %></p>
  </div>
<% end %>
