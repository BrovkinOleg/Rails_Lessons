<%= form_with model: [:admin, @badge], local: true do |form| %>
  <div class="form-group">
    <%= render 'shared/errors', resources: @badge %>
    <p>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </p>
    <p>
      <%= form.label :rule %>
      <%= form.select(:rule, options_for_select(Badge::RULES_NAME), {}) %>
    </p>
    <p>
      <%= form.label :image %>
      <%= form.select :image, options_for_select(Badge.images, selected: Badge.images[0]) %>
    </p>
    <p><%= form.submit %></p>
  </div>
<% end %>
